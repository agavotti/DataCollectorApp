@using Domain.Entities
@model List<Album>

@{
    ViewData["Title"] = "Albums";
    Layout = "_Layout";
}

<h1>Albumes guardados</h1>

<form method="get" asp-controller="Albums" asp-action="Index">
    <input type="text" name="filterTitle" value="@ViewData["filterTitle"]" placeholder="Filter by title" />
    <button type="submit">Search</button>
</form>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>User ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var album in Model)
        {
            <tr>
                <td>@album.Id</td>
                <td>@album.Title</td>
                <td>@album.UserId</td>
                <td>
                    <a href="@Url.Action("Details", "Albums", new { albumId = album.Id })">View Photos</a>
                    <a href="@Url.Action("RemoveAlbum", "Albums", new { title = album.Title, userId = album.UserId })">Remove Album</a>
                </td>
            </tr>
        }
    </tbody>
</table>